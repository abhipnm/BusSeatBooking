<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/online_update_textview_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10.0dp"
        android:textColor="@color/white"
        android:text="@string/current_version"
        style="@style/TextAppearance.Large"
        />

       <TextView
        android:layout_below="@+id/online_update_textview_version"
        android:id="@+id/online_update__textview_newViserion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10.0dp"
        android:textColor="@color/white"
        android:text="@string/current_version"
        android:visibility="gone"
        style="@style/TextAppearance.Large"
        />
    <Button 
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/checkupdate"
        android:text="@string/onlineupdate"
        android:id="@+id/online_update_button"
        android:paddingLeft="25dp"
        style="@style/TextAppearance.Large"
        android:textColor="@color/white"
        />
</RelativeLayout>