<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >
    

    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/customer_Care"
        android:textSize="30sp"
        android:id="@+id/customer_Care"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        />
    
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customer_Care"
        android:text="@string/customer_Care_no"
        android:textSize="30sp"
        android:id="@+id/customer_Care_numer"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        />
     <Button 
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customer_Care_numer"
        android:text="@string/customer_Care_Call"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:background="@drawable/download_btn"
         />
    
</RelativeLayout>
