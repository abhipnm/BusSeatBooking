<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:background="@drawable/d_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_dia"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dheader"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/custom_dialog_title"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/custom_dialog_textview_message"
        style="@style/TextAppearance.Large"
        android:layout_width="fill_parent"
        android:layout_below="@+id/txt_dia"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:text="@string/custom_dialog_message" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            style="@style/TextAppearance.Medium"
            android:background="@drawable/green"
            android:text="Yes"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/red"
            android:clickable="true"
            android:text="No"
              style="@style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>