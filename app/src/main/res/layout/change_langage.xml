<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/peer_to_peer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_check_balance_drawable_" >

        <TextView
            android:id="@+id/check_balance_text_title"
            style="@style/TextAppearance.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/title_changeLanguage"
            android:textColor="@color/white" />
        
        <RadioGroup 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change_language_radio"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/check_balance_text_title"
            >
            <RadioButton 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/change_language_radio_english"
                android:text="@string/radio_changeLanguage_En"
                android:checked="true"
                />
            <RadioButton 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/change_language_radio_burmese"
                android:text="@string/radio_changeLanguage_MY"
                />
        </RadioGroup>

        <EditText
            android:id="@+id/change_language_edit_text_mpin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_language_radio"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/esitbox_bg"
            android:drawableLeft="@drawable/password"
            android:hint="@string/hintName_mpin"
            android:maxLength="4"
            android:textColor="@color/black"
            android:inputType="numberPassword"
            android:paddingLeft="8dp" />

        <Button
            android:id="@+id/change_language_button_Submit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_language_edit_text_mpin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_notmal"
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="@string/btnSubmit" />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_below="@+id/change_language_button_Submit"
            />
    </RelativeLayout>

</RelativeLayout>