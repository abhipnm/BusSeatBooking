<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/registration_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_new_acc_drawable_" >

        <TextView
            android:id="@+id/registration_text_title"
            style="@style/TextAppearance.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/title_Registration"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/registration_edit_text_userName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/registration_text_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/esitbox_bg"
            android:cursorVisible="true"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/username"
            android:hint="@string/hintName_UserName"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/registration_text_mobile_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registration_edit_text_userName"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:cursorVisible="true"
            android:background="@drawable/esitbox_bg"
            android:drawableLeft="@drawable/username"
            android:hint="@string/hintName_MobileNo"
            android:visibility="gone"
            android:inputType="numberSigned"
            android:paddingLeft="8dp" />

        <EditText
            android:id="@+id/registration_edit_text_nrcno"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registration_text_mobile_no"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/esitbox_bg"
            android:drawableLeft="@drawable/password"
            android:hint="@string/hintName_NRC"
            android:cursorVisible="true"
            android:inputType="text"
            android:textColor="@color/black"
            android:paddingLeft="8dp" />
           <EditText
            android:id="@+id/registration_edit_text_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registration_edit_text_nrcno"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/esitbox_bg"
            android:drawableLeft="@drawable/password"
            android:hint="@string/hintName_otherContact"
            android:inputType="text"
            android:cursorVisible="true"
              android:textColor="@color/black"
            android:paddingLeft="8dp" />
           
           <EditText
            android:id="@+id/registration_edit_text_dob"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registration_edit_text_address"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:cursorVisible="true"
              android:textColor="@color/black"
            android:background="@drawable/esitbox_bg"
            android:drawableLeft="@drawable/password"
            android:hint="@string/hintName_mpin"
            android:inputType="numberPassword"
            android:paddingLeft="8dp" />
           
        <Button
            android:id="@+id/registration_button_Submit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registration_edit_text_dob"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_notmal"
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="@string/btnSubmit" />
    </RelativeLayout>

</RelativeLayout>